<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:background="?attr/selectableItemBackground"
  android:clickable="true"
  android:focusable="true"
  style="@style/MdListItem.TwoLine.AvatarWithText">

  <LinearLayout style="@style/Base.MdListItem.Wrapper">

    <TextView
      android:id="@+id/name"
      tools:text="Two Line - Avatar With Text"
      style="@style/Base.MdListItem.Title.Left" />

    <TextView
      android:id="@+id/desc"
      tools:text="Subtitle"
      style="@style/Base.MdListItem.Subtitle.Left" />
  </LinearLayout>

  <com.facebook.drawee.view.SimpleDraweeView
    android:id="@+id/avatar"
    app:roundAsCircle="true"
    style="@style/Base.MdListItem.Avatar" />
</RelativeLayout>